<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titlepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:lineSpacingExtra="1dp"
        android:text="WELCOME \n TO \n FIT ME."
        android:textAlignment="center"
        android:textColor="#D32F2F"
        android:textSize="27sp"
        app:fontFamily="sans-serif roboto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitlepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="Continue the Struggle \n to get maximum Output"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        app:fontFamily="sans-serif typeface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlepage" />

    <Button
        android:id="@+id/btnexercise"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/circle"
        android:onClick="start"
        android:text="START \n WORKOUT"
        android:textColor="#FFFF"
        android:textSize="22sp"
        app:backgroundTint="#00BFFF"
        app:fontFamily="Roboto"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitlepage" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="Make your body health and sexy"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlepage" />


</androidx.constraintlayout.widget.ConstraintLayout>